{
  "kind": "collectionType",
  "collectionName": "vocabularies",
  "info": {
    "name": "Vocabulary",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Word": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "Image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "Audio": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "Description": {
      "type": "richtext"
    },
    "group_vocabularies": {
      "via": "vocabularies",
      "collection": "group-vocabulary"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Verb",
        "Noun",
        "Adjective",
        "Determiner",
        "Adverb",
        "Pronoun",
        "Preposition",
        "Conjunction",
        "Interjection"
      ],
      "default": "Verb",
      "required": true
    },
    "translate": {
      "type": "string"
    }
  }
}
